<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="T1" class="ua.rd.pizzaservice.services.TestSomeService2"/>

    <bean name="pizzaService"
          class="ua.rd.pizzaservice.services.SimplePizzaService">
        <constructor-arg ref="pizzaRepository"/>
    </bean>

    <bean name="orderService"
          class="ua.rd.pizzaservice.services.SimpleOrderService">
        <constructor-arg ref="orderRepository"/>
        <constructor-arg ref="pizzaService"/>
    </bean>

    <bean class="ua.rd.pizzaservice.services.UsageSomeService"
          init-method="init">
        <constructor-arg>
            <bean class="ua.rd.pizzaservice.services.TestSomeService2"/>
        </constructor-arg>
    </bean>
</beans>